function FriendColorON(){
	var color = '0x07A8';
	var friends = Orion.GetFriendList();
	for (var i = 0; i < friends.length; i++)	{
		Orion.AddHighlightCharacter(friends[i], color);
	}
}

function FriendColorOFF(){
	var color = '0x0000';
	var friends = Orion.GetFriendList();
	for (var i = 0; i < friends.length; i++)	{
		Orion.AddHighlightCharacter(friends[i], color);
	}
}
