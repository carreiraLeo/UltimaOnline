function SetarBow(){
    Orion.Print('-1', 'Selecione seu Bow');
    Orion.WaitForAddObject(Orion.AddObject('bow'));
}

function ArmarBow(){
    if(!Orion.ObjAtLayer('bow')){
        if(!Orion.FindObject('bow'))
            SetarBow();
        else
            Orion.UseObject('bow');
            Orion.Attack('lasttarget');
            Orion.WaitTargetObject(lasttarget);
    }
    else
        Orion.Wait(02);
}
