function Autobands(){
	Orion.Wait(500)
	var Timer, Msg = "Voce curou|Voce falhou|Seus dedos|nao precisa";
	while (!Player.Dead()) {			
		if (Player.Hits() < Player.MaxHits() - 1) {
			Orion.ClearJournal(Msg);
			Orion.BandageSelf();
			Timer = Orion.Now() + 5200;
			while (!Orion.InJournal(Msg) && Orion.Now() < Timer) {
				Orion.Wait(100);
			}
		} else {
		Orion.Wait(100);
		}
	}
}
